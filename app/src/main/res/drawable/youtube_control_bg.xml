<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <gradient android:angle="-90" android:startColor="@color/black" android:centerColor="#020104" android:endColor="#061d32"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <gradient android:angle="-90" android:startColor="@color/black" android:centerColor="#020104" android:endColor="#061d32"  />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >

            <gradient
                android:startColor="@color/black"
                android:centerColor="@color/veryDarkBlue"
                android:endColor="@color/chianBlue"
                android:angle="-90"/>
        </shape>
    </item>




</selector>