
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_1"
    tools:context="fragment.TagsFragment"
    >

    <!--title-->
    <TextView
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="#fff"
        android:gravity="center"
        android:text="Select your music tags"/>


    <!--scroll tags list-->
    <ScrollView
        android:id="@+id/tags_scroll_list"
        android:layout_below="@+id/title"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <!--tags list-->
        <LinearLayout
            android:id="@+id/tags_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

    </ScrollView>



    <Button
        android:id="@+id/set_tags_btn"
        android:layout_centerInParent="true"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:background="@drawable/done_big_icon"
        />




</RelativeLayout>




